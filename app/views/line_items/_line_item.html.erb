<% @cart.line_items.each do |item| %>
  <% if item == @current_item %>
    <tr id="current_item">
      <% else %>
    </tr>
    <tr class="">
  <% end %>
      <td><%= item.quantity %><br/><small><em>each: <%= number_to_currency(item.product.price) %></em></small></td>
      <td> <%= item.product.name %><br/><%= image_tag(item.product.image.thumb) %></td>
      <td><%= number_to_currency(item.total_price) %></td>
      <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Remove item?' }, class: 'btn btn-sm btn-default' %></td>
    </tr>
<% end %>